# Athletic Spirit - Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini API Configuration
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Database Configuration (Optional - uses in-memory storage if not set)
DATABASE_URL=sqlite:///./athletic_spirit.db

# JWT Secret for Authentication (Generate a secure random string)
JWT_SECRET_KEY=your_very_secure_random_secret_key_here_minimum_32_characters

# Application Settings
APP_ENV=development
DEBUG=True
CORS_ORIGINS=http://localhost:8080,http://127.0.0.1:8080

# Session Configuration
SESSION_SECRET=another_secure_random_secret_for_sessions
